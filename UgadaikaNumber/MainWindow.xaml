<Window x:Class="UgadaikaNumber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UgadaikaNumber"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Icon="/Images/icon.jpg">
    <Grid Margin="10"
          x:Name="Bg"
          Background="LightSlateGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="AttempsListLb"
                 Width="500"
                 Margin="100 50 0 0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel LastChildFill="True" Margin="0 2">
                        <TextBox Text="{Binding Number}"
                                 BorderThickness="0"
                                 FontSize="16"
                                 Background="LightGray"
                                 Width="400"
                                 x:Name="AttTitle"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"/>
                        <TextBlock Text="{Binding Count}"
                                   HorizontalAlignment="Right"
                                   FontSize="16"
                                   Background="LightGray"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Width="90"
                 x:Name="Input"
                 Height="60"
                 HorizontalAlignment="Left"
                 FontSize="24"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Margin="0 0 0 100"
                 />
        <Button Width="100"
                Height="60"
                HorizontalAlignment="Left"
                Margin="0 100 0 50"
                Content="Проверить"
                x:Name="CheckNumBtn"
                FontSize="18"
                Click="CheckNumBtn_Click"/>
        <Button Width="150"
                Height="60"
                HorizontalAlignment="Left"
                Margin="0 200 0 0"
                Content="Начать заново"
                x:Name="ResetBtn"
                FontSize="18"
                Click="ResetBtn_Click"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Height="30"
                    Margin="0 300 0 0">
            <TextBlock x:Name="Attemps"
                       FontSize="24"
                       />
        </StackPanel>
        

    </Grid>
</Window>
